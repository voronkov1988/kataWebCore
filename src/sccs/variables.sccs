$colorIcons: #ff3e79;
$bgcolor: #f8f8f8;
$textMedium: #7e7e82;
.body_close {
   filter: blur(5px);
   position: fixed;
   -webkit-filter: blur(20px);
   background-color: hsla(0,0%,100%,.96);
}
.menu_blur {
   filter: blur(15px);
   overflow-y: hidden;
   -webkit-filter: blur(20px);
}

%titleBlockH2 {
   display: block;
   font-family: "TT Lakes Regular";
   font-size: 16px;
   line-height: 24px;
   text-transform: uppercase;
   color: #7e7e82;
   background: linear-gradient(270deg, #ffffff 0%, #f8f8f8 98.61%);
   margin: 0;
   padding: 16px;
}

%textBoldH2 {
   font-family: "TT Lakes Bold";
   font-weight: 700;
   line-height: 40px;
   letter-spacing: -0.6px;
   font-size: 28px;
   color: #1b1c21;
}
%icons {
   display: flex;
   justify-content: center;
   align-items: center;
   cursor: pointer;
   width: 30px;
   height: 30px;
   padding: 10px;
   background-color: $colorIcons;
   transition: 0.6s;
   border-radius: 50%;
   -webkit-border-radius: 50%;
   -moz-border-radius: 50%;
   -ms-border-radius: 50%;
   -o-border-radius: 50%;
   &.icon:hover {
      background-color: #2b0611;
      transition: 0.6s;
      -webkit-transition: 0.6s;
      -moz-transition: 0.6s;
      -ms-transition: 0.6s;
      -o-transition: 0.6s;
   }
}
%dots {
   position: absolute;
   width: auto !important;
   margin-left: 50%;
   margin-top: 20px;
   transform: translateX(-50%);
   .swiper-pagination-bullet {
      width: 16px;
      height: 16px;
      background-color: #dddddd;
      &-active {
         background-color: #b5b6bc;
      }
   }
}

%rightArrow {
   display: flex;
   justify-content: center;
   align-items: center;
   width: 40px;
   height: 40px;
   border: 2px solid #ff3e79;
   transition-duration: 0.5s;
   border-radius: 50%;
   &:hover {
      background-color: rgb(220, 217, 217);
      transition-duration: 0.5s;
      transition-timing-function: ease-in-out;
      transform: rotate(360deg) scale(1.2);
      -webkit-transform: rotate(360deg) scale(1.2);
      -moz-transform: rotate(360deg) scale(1.2);
      -ms-transform: rotate(360deg) scale(1.2);
      -o-transform: rotate(360deg) scale(1.2);
   }
}

%textParagraph {
   font-weight: 400;
   font-size: 14px;
   line-height: 18px;
   font-family: "TT Lakes Regular";
   letter-spacing: 0.2px;
   color: #1b1c21;
}

@mixin typeText($color, $weight, $size, $font) {
   color: $color;
   font-weight: $weight;
   font-size: $size;
   font-family: $font;
   letter-spacing: -0.2px;
   line-height: 24px;
}