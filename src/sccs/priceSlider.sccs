.price {
   background-color: $bgcolor;
   overflow: hidden;

   & h2 {
      display: block;
      font-family: "TT Lakes Regular";
      font-size: 16px;
      line-height: 24px;
      text-transform: uppercase;
      color: #7e7e82;
      background: linear-gradient(270deg, #ffffff 0%, #f8f8f8 98.61%);
      margin: 0;
      padding: 16px;
   }
   .price__slider {
      position: relative;
      background-color: $bgcolor;
      overflow: hidden;
      padding: 30px 0 50px 0;
      .swiper-wrapper {
         .price__onePrice {
            display: flex;
            flex-direction: column;
            justify-content: space-evenly;
            background-color: #fff;
            border-radius: 6px;
            width: 260px;
            height: 200px;
            margin: 8px;
            .price__oneBlock {
               display: flex;
               flex-direction: column;
               margin-left: 16px;
               cursor: pointer;
               &_title {
                  color: $textMedium;
                  font-family: "TT Lakes Medium";
                  font-size: 14px;
                  line-height: 16px;
                  opacity: 0.72;
               }
               .price__descr {
                  font-family: "TT Lakes Regular";
                  color: #1b1c21;
                  margin-top: 5px;
                  font-size: 14px;
                  line-height: 18px;
                  letter-spacing: 0.2px;
               }
               &.timeBlock {
                  display: grid;
                  grid-template-columns: 45% 55%;
                  justify-content: center;
                  align-items: center;
                  .price__time {
                     display: flex;
                     flex-direction: column;
                  }
                  .price__order {
                     display: flex;
                     justify-content: space-evenly;
                     padding: 4px 0 4px 12px;
                     background-color: $colorIcons;
                     color: #ffffff;
                     cursor: pointer;
                     margin-right: 10px;
                     text-transform: uppercase;
                     font-size: 12px;
                     line-height: 24px;
                     border-radius: 16px;
                  }
               }
            }
         }
      }
      .price__dots {
         @extend %dots;
      }
   }
   .price__wrapper {
      @extend %textParagraph;
      .price__table {
         display: none;
      }
      .price__infoBlock {
         font-family: "TT Lakes Regular";
         font-size: 14px;
         line-height: 20px;
         letter-spacing: 0.2px;
         font-weight: 400;
         color: #1b1c21;
         padding: 20px 10px;
         &_wrapper {
            width: 80%;
            a {
               padding: 0 0 0 0;
               font-weight: 500;
               color: #1b1c21;
               font-family: "TT Lakes Medium";
               line-height: 24px;
               letter-spacing: -0.2px;
               text-decoration: none;
               span::after {
                  content: "";
                  display: inline-block;
                  position: absolute;
                  margin-top: 6px;
                  width: 15px;
                  height: 15px;
                  background: url("../img/arrowRight.png") center right no-repeat;
               }
            }
         }
         .price__infoBlock_wrapper {
            width: 50%;
         }
      }
   }
}

@media (min-width: 768px) {
   .price {
      background-color: #f8f8f8;
    
      .price__slider {
         display: none;
      }
      .price__wrapper {
         width: 100%;
         background-color: inherit;
         border-radius: 6px;
         .topRow {
            display: grid;
            grid-template-columns: 4fr 1fr 1fr 1fr;
            width: 100%;
            color: #7e7e82 !important;
            font-family: "TT Lakes Medium";
            font-weight: 700;
            line-height: 16px;
            font-size: 14px;
            opacity: 0.72;
            background-color: #f8f8f8 !important;
         }
         .price__table {
            display: flex;
            flex-direction: column;
            width: 98%;
            margin-left: 1%;
            color: #1b1c21;
            font-family: "TT Lakes Regular";
            font-size: 14px;
            font-weight: 500;
            line-height: 18px;
            letter-spacing: 0.2px;
            background: #f8f8f8;
            .price__row {
               display: grid;
               grid-template-columns: 4fr 1fr 1fr 1fr;
               background-color: #fff;
               padding: 16px 0;
               color: #1b1c21;
               font-weight: 400;
               & p {
                  padding-left: 3%;
               }
               .price__button {
                  display: flex;
                  justify-content: space-evenly;
                  align-items: center;
                  color: #fff;
                  margin-top: 10px;
                  background-color: #ff3e79;
                  border-radius: 20px;
                  height: 32px;
                  margin-right: 10%;
                  font-size: 12px;
                  font-weight: normal;
                  cursor: pointer;
                  font-family: "TT Lakes Bold";
                  text-transform: uppercase;
               }
            }
         }
         .line {
            width: 95%;
            margin-left: 2.5%;
            height: 1px;
            background-color: #eaeaea;
            position: absolute;
            z-index: 10;
         }
      }
   }
}

@media (min-width: 1440px) {
   .price {
      margin-left: 160px;
      .price__wrapper {
         width: 100%;
         position: relative;
         .line {
            width: 95%;
            display: block;
         }
      }
   }
}
